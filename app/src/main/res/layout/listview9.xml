<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/backgroundlv"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/stase1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stase : "
                android:textColor="@color/md_black_1000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/stase9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username"
                android:textColor="@color/md_black_1000"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/nim1"
                android:layout_height="wrap_content"
                android:text="Username : "
                android:textColor="@color/md_black_1000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/username9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username"
                android:textColor="@color/md_black_1000"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Mulai : "
                android:id="@+id/mulai1"
                android:textColor="@color/md_black_1000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tglmulai9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username"
                android:textColor="@color/md_black_1000"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Selesai : "
                android:id="@+id/selesai1"
                android:textColor="@color/md_black_1000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tglselesai9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username"
                android:textColor="@color/md_black_1000"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textColor="@color/md_black_1000">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/status1"
                android:text="Status : "
                android:textColor="@color/md_black_1000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/status9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username"
                android:textColor="@color/md_black_1000"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>