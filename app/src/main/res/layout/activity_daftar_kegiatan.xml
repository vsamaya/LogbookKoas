<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad"
    tools:context=".DaftarKegiatan">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/filter_jenis_jurnal"
        android:padding="8dp"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jenis_jurnal"
            android:textColor="@color/md_white_1000"
            android:fontFamily="sans-serif"
            android:textSize="14sp"
            android:layout_marginRight="4dp"/>

        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/spinnerbackground"
            android:gravity="center"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_jnsjurnal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinnerbackground"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:padding="3dp"
                android:paddingRight="30dp"
                android:popupBackground="@drawable/spinnerbackground"
                android:spinnerMode="dropdown" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_keyboard_arrow_down_black_24dp" />

        </RelativeLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="coba"
            android:id="@+id/btn_filter"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cobajson"
            android:textColor="@color/md_white_1000"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/filter_status"
        android:layout_toRightOf="@+id/filter_jenis_jurnal"
        android:paddingVertical="8dp"
        android:paddingHorizontal="3dp"
        android:layout_marginVertical="5dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status_approval"
            android:textColor="@color/md_white_1000"
            android:fontFamily="sans-serif"
            android:textSize="14sp"
            android:layout_marginRight="4dp"/>

        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:background="@drawable/spinnerbackground"
            android:gravity="center"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinnerbackground"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:padding="3dp"
                android:paddingRight="30dp"
                android:popupBackground="@drawable/spinnerbackground"
                android:spinnerMode="dropdown" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_keyboard_arrow_down_black_24dp" />

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/filter_stase"
        android:layout_below="@+id/filter_jenis_jurnal"
        android:paddingVertical="8dp"
        android:paddingHorizontal="10dp"
        android:layout_marginHorizontal="5dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kepaniteraan(stase)"
            android:textColor="@color/md_white_1000"
            android:fontFamily="sans-serif"
            android:textSize="14sp"
            android:layout_marginRight="4dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinnerbackground"
            android:gravity="center"
            android:orientation="horizontal">

            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/spinner_stase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinnerbackground"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:padding="3dp"
                android:paddingRight="30dp"
                android:popupBackground="@drawable/spinnerbackground"
                android:spinnerMode="dropdown" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_keyboard_arrow_down_black_24dp" />

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/filter_nama_mahasiswa"
        android:layout_below="@+id/filter_stase"
        android:paddingVertical="8dp"
        android:paddingHorizontal="10dp"
        android:layout_marginHorizontal="5dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Mahasiswa"
            android:textColor="@color/md_white_1000"
            android:fontFamily="sans-serif"
            android:textSize="14sp"
            android:layout_marginRight="4dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinnerbackground"
            android:gravity="center"
            android:orientation="horizontal">

            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/spinner_nama_mahasiswa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinnerbackground"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:padding="3dp"
                android:paddingRight="30dp"
                android:popupBackground="@drawable/spinnerbackground"
                android:spinnerMode="dropdown" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_keyboard_arrow_down_black_24dp" />

        </RelativeLayout>
    </LinearLayout>





</RelativeLayout>