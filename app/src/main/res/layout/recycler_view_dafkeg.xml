<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:padding="8dp"
    android:background="@drawable/recyclerview"
    android:gravity="center_vertical"
    android:id="@+id/recycle_view_daftarkegiatan">
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ket_dafkeg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/namamhsw_dafkeg"
            android:text="CATHARINA"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/md_white_1000"
            android:fontFamily="sans-serif-medium"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22010118220123"
            android:id="@+id/nim_dafkeg"
            android:textColor="@color/md_white_1000"
            android:fontFamily="sans-serif-light"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tgl_dafkeg"
            android:text="28 Oktober 2019"
            android:textColor="@color/md_white_1000"
            android:fontFamily="sans-serif"
            android:textStyle="italic"
            android:textSize="15sp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_approved"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:text="APPROVED"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:textColor="@color/md_white_1000"/>



</RelativeLayout>